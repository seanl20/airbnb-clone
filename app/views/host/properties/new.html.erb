<div class="h-full bg-gray-100">
  <main class="max-w-7xl mx-auto pb-10 lg:py-12 lg:px-8">
    <div class="lg:grid lg:grid-cols-12 lg:gap-x-5">
      <%= render "host/dashboard/sidebar" %>

      <div class="space-y-6 sm:px-6 lg:px-0 lg:col-span-9">
        <div class="bg-white shadow overflow-hidden sm:rounded-md mt-0 py-4 px-4">
          <!--
            This example requires some changes to your config:
            
            ```
            // tailwind.config.js
            module.exports = {
              // ...
              plugins: [
                // ...
                require('@tailwindcss/forms'),
              ],
            }
            ```
          -->
          <%= form_with model: @property, url: host_properties_path, local: true do |f| %>
            <div class="space-y-12">
              <div class="border-b border-gray-900/10 pb-12">
                <h2 class="text-base/7 font-semibold text-gray-900">Add new Property</h2>
                <p class="mt-1 text-sm/6 text-gray-600">use this form to create a new property for hosting.</p>

                <div class="mt-10 grid grid-cols-1 gap-x-6 gap-y-8 sm:grid-cols-6">
                  <div class="sm:col-span-3">
                    <%= f.label :name, class: "block text-sm/6 font-medium text-gray-900" %>
                    <div class="mt-2">
                      <%= f.text_field :name, class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm/6"%>
                    </div>
                  </div>

                  <div class="sm:col-span-3">
                    <%= f.label :headline, class: "block text-sm/6 font-medium text-gray-900" %>
                    <div class="mt-2">
                      <%= f.text_field :headline, class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm/6"%>
                    </div>
                  </div>

                  <div class="col-span-full">
                    <%= f.label :description, class: "block text-sm/6 font-medium text-gray-900" %>
                    <div class="mt-2">
                      <%= f.text_area :description, class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm/6"%>
                    </div>
                  </div>

                  <div class="col-span-full">
                    <%= f.label :images, class: "block text-sm/6 font-medium text-gray-900" %>
                    <div class="mt-2 flex items-center gap-x-3">
                      <%= f.file_field :images %>
                    </div>
                  </div>

                  <div class="col-span-full">
                    <%= f.label :address_1, class: "block text-sm/6 font-medium text-gray-900" %>
                    <div class="mt-2">
                      <%= f.text_field :address_1, class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm/6"%>
                    </div>
                  </div>

                  <div class="col-span-full">
                    <%= f.label :address_2, class: "block text-sm/6 font-medium text-gray-900" %>
                    <div class="mt-2">
                      <%= f.text_field :address_2, class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm/6"%>
                    </div>
                  </div>

                  <div class="sm:col-span-2 sm:col-start-1">
                    <%= f.label :city, class: "block text-sm/6 font-medium text-gray-900" %>
                    <div class="mt-2">
                      <%= f.text_field :city, class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm/6"%>
                    </div>
                  </div>

                  <div class="sm:col-span-2">
                    <%= f.label :state, class: "block text-sm/6 font-medium text-gray-900" %>
                    <div class="mt-2">
                      <%= f.text_field :state, class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm/6"%>
                    </div>
                  </div>

                  <div class="sm:col-span-2">
                    <%= f.label :zip_code, class: "block text-sm/6 font-medium text-gray-900" %>
                    <div class="mt-2">
                      <%= f.text_field :zip_code, class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm/6"%>
                    </div>
                  </div>

                  <div class="sm:col-span-3">
                    <%= f.label :country_code, "Country", class: "block text-sm/6 font-medium text-gray-900" %>
                    <div class="mt-2">
                      <%= f.country_select :country_code, { priority_countries: ["US", "CA"] }, class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:max-w-xs sm:text-sm/6" %>
                    </div>
                  </div>
                </div>
              </div>
            </div>

            <div class="mt-6 flex items-center justify-end gap-x-6">
              <button type="submit" class="rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600">Save</button>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </main>
</div>